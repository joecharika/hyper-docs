{% compress %}

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>{% block title %}{% endblock %} - hyperDocs</title>

        <!-- Meta -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="PHP MVC Framework">
        <meta name="keywords" content="php,framework,hyper,mvc">
        <meta name="author" content="Hyper Team, Starlight">
        <link rel="shortcut icon" href="/favicon.ico">

        <!-- Google Font -->
        <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap" rel="stylesheet">

        <!-- FontAwesome JS-->
        <script defer src="/assets/fontawesome/js/all.min.js"></script>

        <!-- Theme CSS -->
        <link id="theme-style" rel="stylesheet" href="/assets/css/theme.css">

        {% block styles %}{% endblock %}

        <!-- Custom CSS -->
        <link rel="stylesheet" href="/assets/css/style.css">

    </head>

    <body>
    <header class="header fixed-top">
        <div class="branding docs-branding">
            <div class="container-fluid position-relative py-2">
                <div class="docs-logo-wrapper">
                    <div class="site-logo">
                        <a class="navbar-brand" href="/">
                            <img class="logo-icon mr-2" src="/assets/images/icon.png" alt="logo">
                            <span class="logo-text">hyper<span class="text-alt">{{ request.path == '/' ? '' : 'docs' }}</span></span>
                        </a>
                    </div>
                </div>
                <!--//docs-logo-wrapper-->
                <div class="docs-top-utilities d-flex justify-content-end align-items-center">

                    <ul class="social-list list-inline mx-md-3 mx-lg-5 mb-0 d-none d-lg-flex">
                        <li class="list-inline-item"><a href="#"><i class="fab fa-github fa-fw"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fab fa-twitter fa-fw"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fab fa-slack fa-fw"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fab fa-product-hunt fa-fw"></i></a></li>
                    </ul><!--//social-list-->
                    <h5 class="my-1 mx-3 text-primary">{{ docsVersion }}</h5>
                    <a href="{{ asset('downloads/hyper-1.0.5.zip') }}"
                       class="btn btn-primary d-none d-lg-flex">Download</a>
                </div><!--//docs-top-utilities-->
            </div><!--//container-->
        </div><!--//branding-->
    </header><!--//header-->

    {% block body %}{% endblock %}

    <!-- Javascript -->
    <script src="/assets/plugins/jquery-3.4.1.min.js"></script>
    <script src="/assets/plugins/popper.min.js"></script>
    <script src="/assets/plugins/bootstrap/js/bootstrap.min.js"></script>

    {% block scripts %}{% endblock %}

    </body>
    </html>

{% endcompress %}

